{
  "name": "Colonist.io Resource Tracker",
  "description": "Tracks opponent's cards in hand for 1v1 game colonist.io",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": "colonist_logo.png"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://colonist.io/*"],
  "content_scripts": [
    {
      "matches": ["https://colonist.io/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
